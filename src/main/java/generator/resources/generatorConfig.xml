<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!--<classPathEntry location="/workspace/github/fbi-haierfip/lib/ojdbc6.jar"/>-->
    <classPathEntry location="D:\WorkSpace\IntellijIDEA\quartz\lib\ojdbc6.jar"/>

    <!--信息-->
    <context id="AllInfo" targetRuntime="MyBatis3">
        <jdbcConnection driverClass="oracle.jdbc.driver.OracleDriver"
                        connectionURL="jdbc:oracle:thin:@localhost:1521:orcl"
                        userId="quartz"
                        password="quartz">
        </jdbcConnection>


        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="stp.repository.quartz.model" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="stp.repository.quartz.mapper" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="stp.repository.quartz.dao" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table tableName="SCHEDULE_JOB">
            <property name="ignoreQualifiersAtRuntime" value="true" />
            <generatedKey column="pkid" sqlStatement="select sys_guid() from dual" identity="false"/>
        </table>
    </context>

</generatorConfiguration>
